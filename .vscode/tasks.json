{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Build - Debug",
			"command": "make",
			"args": [ "-j" ],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "Build - Release",
			"command": "make",
			"args": [ "-j" ],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}